# Configuration de production pour Souqly Frontend
# Fichier d'environnement pour le déploiement

# API Configuration
API_BASE_URL=https://api.souqly.com
API_TIMEOUT=30000
API_RETRY_ATTEMPTS=3

# WebSocket Configuration
WS_BASE_URL=wss://api.souqly.com/ws
WS_RECONNECT_INTERVAL=5000
WS_MAX_RECONNECT_ATTEMPTS=10

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_SAMPLE_RATE=1.0
ANALYTICS_BATCH_SIZE=50
ANALYTICS_FLUSH_INTERVAL=30000

# Machine Learning Configuration
ML_ENABLED=true
ML_RECOMMENDATION_CACHE_TTL=3600000
ML_USER_CLUSTERING_ENABLED=true
ML_ANOMALY_DETECTION_ENABLED=true

# Admin Configuration
ADMIN_FEATURES_ENABLED=true
ADMIN_ANALYTICS_ENABLED=true
ADMIN_BOOST_MANAGEMENT_ENABLED=true
ADMIN_REAL_TIME_MONITORING_ENABLED=true

# Performance Configuration
PERFORMANCE_MONITORING_ENABLED=true
PERFORMANCE_SAMPLE_RATE=0.1
PERFORMANCE_MAX_EVENTS=1000

# Security Configuration
JWT_TOKEN_REFRESH_ENABLED=true
JWT_TOKEN_REFRESH_THRESHOLD=300000
SECURITY_HEADERS_ENABLED=true

# Caching Configuration
CACHE_ENABLED=true
CACHE_TTL=1800000
CACHE_MAX_SIZE=100

# Error Reporting Configuration
ERROR_REPORTING_ENABLED=true
ERROR_REPORTING_SAMPLE_RATE=1.0
ERROR_REPORTING_MAX_EVENTS=100

# Feature Flags
FEATURE_FLAGS_ENABLED=true
FEATURE_ADVANCED_ML=true
FEATURE_REAL_TIME_RECOMMENDATIONS=true
FEATURE_ADMIN_DASHBOARD=true
FEATURE_BOOST_MANAGEMENT=true
FEATURE_REAL_TIME_MONITORING=true

# Logging Configuration
LOG_LEVEL=info
LOG_ENABLED=true
LOG_MAX_SIZE=10
LOG_RETENTION_DAYS=30

# Database Configuration (pour les données locales)
DB_ENCRYPTION_ENABLED=true
DB_BACKUP_ENABLED=true
DB_BACKUP_INTERVAL=86400000

# Push Notifications
PUSH_NOTIFICATIONS_ENABLED=true
PUSH_NOTIFICATIONS_SERVER_KEY=your_server_key_here

# Image Optimization
IMAGE_OPTIMIZATION_ENABLED=true
IMAGE_QUALITY=0.8
IMAGE_MAX_SIZE=2048

# Network Configuration
NETWORK_TIMEOUT=30000
NETWORK_RETRY_ENABLED=true
NETWORK_OFFLINE_CACHE_ENABLED=true

# Monitoring Configuration
MONITORING_ENABLED=true
MONITORING_INTERVAL=60000
MONITORING_MAX_METRICS=1000

# Development vs Production
NODE_ENV=production
DEBUG=false
TESTING=false 